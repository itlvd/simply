{{!-- Layout --}}
{{!< default}}

{{#post}}


<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js" referrerpolicy="no-referrer"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/bigfoot/2.1.4/bigfoot.min.js" integrity="sha512-OQfYbLWwdJsEiJc+/zEyY6EF6VcHHRy/2vLTweF+iIwmfHpJFau6lpAxywKyrl28Ui5/LaxGVu0i7WecihYIQg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bigfoot/2.1.4/bigfoot-default.css" integrity="sha512-DhI5L06RHGX5gUnHM2t7ikxNvKfyb+C2/0coMbHOg6iep7cX35PNUmOBwLz9RBvCVllR3mjX7kHnEDR4xQcqlA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
<script type="text/javascript">
    $.bigfoot();
</script>


{{!-- Class for <body> --}}
{{#contentFor "special_body_class"}}is-article{{/contentFor}}

<article class="post py-vmin8 relative">
    <header class="post-header godo-canvas">
        {{!-- [Title, Excerpt, Author, DateTime, Share]- partials/article/article-header.hbs --}}
        {{> "article/article-header"}}

        {{!-- Post Image - partials/article/article-featured-image.hbs --}}
        {{#if feature_image}}{{> "article/article-featured-image" image=feature_image class="block mt-12"}}{{/if}}
    </header>

    {{!-- Article Body - partials/article/article-body.hbs --}}
    {{> "article/article-body"}}
</article>

{{/post}}

{{!-- 6 Related Articles - partials/article/article-related.hbs --}}
{{> "article/article-related"}}

{{!-- Post Commets - partials/article/article-comments.hbd --}}
{{#post}}{{> "article/article-comments"}}{{/post}}
